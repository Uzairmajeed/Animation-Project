<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".CallerDesign">

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/CardViewForSearch"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        app:neumorph_backgroundColor="#E1E7F1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="#E1E7F1"
                android:src="@drawable/baseline_search_24"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Serach For Contacnts And please"
                android:maxLines="1"
                android:ellipsize="end"
                android:padding="16dp"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="#E1E7F1"
                android:src="@drawable/baseline_mic_none_24"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"/>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#E1E7F1"
                android:src="@drawable/baseline_drag_indicator_24"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

    </soup.neumorphism.NeumorphCardView>
    
    
    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/CardViewForSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/baseline_sentiment_satisfied_alt_24"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="16dp"
                android:textStyle="bold|italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile .Just Now"
                android:textSize="16dp"
                android:textStyle="bold|italic"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/background_color"
            android:src="@drawable/baseline_call_24"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/baseline_sentiment_satisfied_alt_24"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="16dp"
                android:textStyle="bold|italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile .Just Now"
                android:textSize="16dp"
                android:textStyle="bold|italic"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/background_color"
            android:src="@drawable/baseline_call_24"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/baseline_sentiment_satisfied_alt_24"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="16dp"
                android:textStyle="bold|italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile .Just Now"
                android:textSize="16dp"
                android:textStyle="bold|italic"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/background_color"
            android:src="@drawable/baseline_call_24"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"/>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_format_list_numbered_24"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E1E7F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

    <!-- Placeholder for the dialpad layout -->
    <FrameLayout
        android:id="@+id/dialpadContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- Include the dialpad layout -->
        <include layout="@layout/dialpad_layout" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>